<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@drawable/bg_color_white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/word_settings"
            android:textColor="@color/titleBlack"
            android:textSize="@dimen/title_bar_title_size" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/title_bar_height"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:contentDescription="@string/word_back"
            android:onClick="onClick"
            android:paddingStart="16dp"
            android:src="@drawable/icon_return" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/gray" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:background="@color/white"
        android:onClick="onClick">

        <android.support.v7.widget.CardView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:background="@color/white"
            app:cardCornerRadius="22dp">

            <ImageView
                android:id="@+id/headImg"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/icon_unregisteredavatar" />

        </android.support.v7.widget.CardView>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:src="@drawable/icon_open" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="10dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/titleBlack"
            android:gravity="center"
            android:text="@string/word_news_push"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/titleGray"
            android:layout_alignParentBottom="true"/>

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/new_push"
            android:onClick="onClick"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/feedback"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:onClick="onClick"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/titleBlack"
            android:gravity="center"
            android:text="@string/word_feedback"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/titleGray"
            android:layout_alignParentBottom="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_open" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/about_us"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:onClick="onClick"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/titleBlack"
            android:gravity="center"
            android:text="@string/word_about_us"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/titleGray"
            android:layout_alignParentBottom="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_open" />
    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/protocol"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:onClick="onClick"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/titleBlack"
            android:gravity="center"
            android:text="@string/word_protocol"
            android:textSize="14sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/titleGray"
            android:layout_alignParentBottom="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_open" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/check_upgrade"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:onClick="onClick"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/titleBlack"
            android:gravity="center"
            android:text="@string/word_check_upgrade"
            android:textSize="14sp"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_open" />
    </RelativeLayout>


    <TextView
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_color_primary_radius"
        android:gravity="center"
        android:onClick="onClick"
        android:text="@string/word_logout"
        android:textColor="@color/white"
        android:textSize="16sp" />



</LinearLayout>