<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:background="@color/white"
        android:gravity="center|start"
        android:orientation="horizontal"
        android:paddingStart="16dp">

        <ImageView
            android:id="@+id/good_img"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/load_err_empty"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="综合评价"
            android:textColor="@color/titleBlack"
            android:textSize="16sp"/>

        <com.wingplus.coomohome.component.MyRatingStar
            android:id="@+id/good_total_star"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:gravity="center"
            app:star_size="20dp">

        </com.wingplus.coomohome.component.MyRatingStar>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="16dp"
        android:background="@color/titleGray" />

    <EditText
        android:id="@+id/good_comment"
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:background="@color/white"
        android:gravity="start|top"
        android:hint="@string/word_share_buy_about"
        android:maxLength="200"
        android:padding="10dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:paddingTop="18dp"
        android:textColor="@color/titleBlack"
        android:textColorHint="@color/goods_label_back"
        android:textSize="14sp" />

    <include layout="@layout/item_image_add"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/titleGray" />


</LinearLayout>