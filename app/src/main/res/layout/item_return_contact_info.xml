<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/search_back_grey"
        android:gravity="center|start"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:text="@string/word_contact_way"
        android:textColor="@color/titleGray"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="16dp">

        <TextView
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="@string/word_contact_person"
            android:textColor="@color/titleGrey"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:background="@color/white"
            android:ellipsize="end"
            android:inputType="text"
            android:lines="1"
            android:maxLength="10"
            android:maxLines="1"
            android:hint="请填写联系人"
            android:text=""
            android:textColor="@color/titleBlack"
            android:textSize="14sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="16dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="@string/word_contact_phone"
            android:textColor="@color/titleGrey"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:background="@color/white"
            android:ellipsize="end"
            android:inputType="phone"
            android:lines="1"
            android:maxLength="11"
            android:maxLines="1"
            android:hint="请填写联系电话"
            android:text=""
            android:textColor="@color/titleBlack"
            android:textSize="14sp" />

    </LinearLayout>
</LinearLayout>