<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:layout_marginTop="10dp"
    android:background="@color/white">

    <com.wingplus.coomohome.component.SpannableTextView
        android:id="@+id/order_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:gravity="center"
        android:text="0000000005"
        android:textColor="@color/titleGrey"
        android:textSize="12sp"
        app:pre_string="@string/word_order_code_pre" />

    <TextView
        android:id="@+id/order_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:text="待付款"
        android:textColor="@color/color_order_status"
        android:textSize="12sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/titleGray"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"/>
</RelativeLayout>