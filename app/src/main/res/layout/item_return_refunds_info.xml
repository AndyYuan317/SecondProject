<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/search_back_grey"
        android:gravity="center|start"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:text="@string/word_refunds_info"
        android:textColor="@color/titleGray"
        android:textSize="12sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="@string/word_due_refunds"
            android:textColor="@color/titleGrey"
            android:textSize="12sp" />

        <com.wingplus.coomohome.component.SpannableTextView
            android:id="@+id/dues_refunds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:text="11"
            android:textColor="@color/titleBlack"
            android:textSize="14sp" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="16dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="@string/word_actual_refunds"
            android:textColor="@color/titleGrey"
            android:textSize="12sp" />

        <com.wingplus.coomohome.component.SpannableTextView
            android:id="@+id/actual_refunds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:text="11"
            android:textColor="@color/titleBlack"
            android:textSize="14sp" />

    </RelativeLayout>
</LinearLayout>