<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_text_rectangle_border_black_r_2px"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/minus"
        android:minWidth="30dp"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:padding="7dp"
        android:src="@drawable/icon_reduce_adjust"
        android:background="@drawable/bg_component_color_add_minus_left"
        android:contentDescription="@string/component_add_minus" />

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:minWidth="30dp"
        android:minHeight="25dp"
        android:textColor="@color/black"
        android:textSize="@dimen/popup_attr_textSize" />

    <ImageView
        android:id="@+id/add"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:contentDescription="@string/component_add_minus"
        android:minWidth="30dp"
        android:padding="7dp"
        android:background="@drawable/bg_component_color_add_minus_right"
        android:src="@drawable/icon_add_adjust" />
</LinearLayout>