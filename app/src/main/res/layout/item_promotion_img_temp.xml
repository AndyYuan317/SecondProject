<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.wingplus.coomohome.component.ResizableImageView
        android:id="@+id/promotion_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/load_err_empty" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true">


        <TextView
            android:id="@+id/promotion_regular"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_text_rectangle_border_regular"
            android:gravity="center"
            android:text="@string/word_regular"
            android:textColor="@color/promotion_regular"
            android:textSize="10sp" />
    </RelativeLayout>

</RelativeLayout>