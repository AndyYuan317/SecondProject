<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="7dp"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="7dp"
    app:cardCornerRadius="3dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/money"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:lines="1"
                android:maxLines="1"
                android:padding="0dp"
                android:text="46000"
                android:textColor="@color/combinationBlack"
                android:textSize="24sp"
                android:textStyle="bold"
                app:autoSizeTextType="uniform" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/money"
                android:layout_toEndOf="@id/money"
                android:text="元"
                android:textColor="@color/combinationBlack"
                android:textSize="16sp"
                android:textStyle="bold" />
        </RelativeLayout>


        <com.wingplus.coomohome.component.DashedLineView
            android:layout_width="2dp"
            android:layout_height="match_parent" />


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingStart="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/coupon_remark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="满5999减460"
                    android:textColor="@color/titleBlack"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/valid_remark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:lines="1"
                    android:maxLines="1"
                    android:text="仅限有效商品使用"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/time_remark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="2017.09.09至2017.09.25"
                    android:textColor="@color/coupon_time"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/use_now"
                android:layout_width="62dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:background="@color/coupon_use_back_ac"
                android:gravity="center"
                android:text="@string/word_user_now"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp" />

        </RelativeLayout>
    </LinearLayout>


    <ImageView
        android:id="@+id/status"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_gravity="end"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="40dp"
        android:scaleType="fitXY" />
</android.support.v7.widget.CardView>