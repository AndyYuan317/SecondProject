<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/good_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    app:cardCornerRadius="7dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <com.wingplus.coomohome.component.ResizableImageView
            android:id="@+id/good_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/load_err_empty"
            app:height_scale="0.5"/>

        <TextView
            android:id="@+id/good_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="15dp"
            android:lines="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="LEONARDO-咖啡杯"
            android:textColor="@color/titleBlack"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/good_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:text="手工切割-制作精良"
            android:textColor="@color/titleGray"
            android:textSize="13sp" />

        <com.wingplus.coomohome.component.SpannableTextView
            android:id="@+id/good_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:text="990"
            android:textColor="@color/titleBlack"
            android:textSize="20sp"
            android:layout_marginBottom="12dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/good_buy_now"
        android:layout_width="80dp"
        android:layout_height="26dp"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_text_rectangle_border_primary_1"
        android:gravity="center"
        android:text="立即购买"
        android:textColor="@color/colorPrimary"
        android:textSize="12sp" />
</android.support.v7.widget.CardView>