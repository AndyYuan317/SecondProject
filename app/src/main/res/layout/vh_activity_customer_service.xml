<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="14dp">

    <TextView
        android:id="@+id/dialog_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:textColor="@color/coupon_time"
        android:textSize="12sp"
        android:text="09/27 8:15"/>

    <LinearLayout
        android:id="@+id/content_customer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/img_customeravatar" />
        </android.support.v7.widget.CardView>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/icon_message" />

        <TextView
            android:id="@+id/customer_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="49dp"
            android:background="@drawable/bg_color_white_radius"
            android:lineSpacingExtra="3dp"
            android:padding="11dp"
            android:text="你嘎哈你嘎哈你嘎哈你嘎哈你嘎哈你嘎哈你嘎哈你嘎哈你嘎哈"
            android:textColor="@color/titleBlack"
            android:textSize="16sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/content_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/user_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="49dp"
                android:background="@drawable/bg_color_primary_radius"
                android:lineSpacingExtra="3dp"
                android:padding="11dp"
                android:text="你嘎哈你嘎哈你嘎哈"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RelativeLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/icon_messagecolor" />

        <android.support.v7.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:background="@color/white"
            app:cardCornerRadius="20dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/name" />
        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>