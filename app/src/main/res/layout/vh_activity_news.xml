<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    android:background="@color/translate"
    android:orientation="vertical"
    android:paddingBottom="6dp"
    android:paddingTop="14dp">

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_gravity="center"

        android:background="@drawable/bg_color_cccccc_radius"
        android:gravity="center"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:text="2017.10.04 12:30"
        android:textColor="@color/white"
        android:textSize="10sp" />

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="18dp"
            android:paddingEnd="14dp"
            android:paddingStart="14dp"
            android:paddingTop="14dp">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:text="精挑细选"
                    android:textColor="@color/titleBlack"
                    android:textSize="14sp" />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/unRead"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:src="@drawable/red_tip"/>
            </LinearLayout>

            <TextView
                android:id="@+id/des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:ellipsize="end"
                android:text=""
                android:textColor="@color/titleGray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/horizontal"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/titleGray" />

            <com.wingplus.coomohome.component.ResizableImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="116dp"
                android:background="@drawable/load_err_empty"
                android:scaleType="fitXY" />
        </LinearLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>